<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:alpha">0.50</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="IconImageStyle">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SubtitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/title</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#40000000</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">#D3D3D3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="KontaktStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@id/cinema_image</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#40d3d3d3</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textColor">#D3D3D3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CinemaImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_below">@id/icon_image</item>
        <item name="android:alpha">0.95</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PhoneIconStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#ccffffff</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/phonecall</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="MailIconStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_below">@id/icon_phone</item>
        <item name="android:alpha">0.95</item>
        <item name="android:background">#ccffffff</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="FanpageIconStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_below">@+id/icon_mail</item>
        <item name="android:alpha">0.95</item>
        <item name="android:background">#ccffffff</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EventPlaceStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_below">@+id/icon_fb</item>
        <item name="android:alpha">0.75</item>
        <item name="android:background">#ccffffff</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="EventTimeStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_below">@+id/icon_pointer</item>
        <item name="android:alpha">0.95</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="PhoneNumberStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@+id/icon_phone</item>
        <item name="android:layout_alignTop">@+id/icon_phone</item>
        <item name="android:layout_below">@id/subtitle</item>
        <item name="android:layout_toRightOf">@id/icon_phone</item>
        <item name="android:background">#ccffffff</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MailAdressStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@+id/icon_mail</item>
        <item name="android:layout_alignTop">@+id/icon_mail</item>
        <item name="android:layout_below">@id/phone_number</item>
        <item name="android:layout_toRightOf">@id/icon_phone</item>
        <item name="android:background">#ccffffff</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FanpageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/icon_pointer</item>
        <item name="android:layout_alignBottom">@+id/icon_fb</item>
        <item name="android:layout_alignTop">@+id/icon_fb</item>
        <item name="android:layout_below">@id/mail_adress</item>
        <item name="android:layout_toEndOf">@+id/icon_mail</item>
        <item name="android:background">#ccffffff</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EventPlaceDescStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@+id/icon_pointer</item>
        <item name="android:layout_alignTop">@+id/icon_pointer</item>
        <item name="android:layout_below">@+id/fb_adress</item>
        <item name="android:layout_toRightOf">@id/icon_phone</item>
        <item name="android:background">#ccffffff</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EventTimeDescStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@+id/icon_working_hours</item>
        <item name="android:layout_alignTop">@+id/icon_working_hours</item>
        <item name="android:layout_below">@+id/po</item>
        <item name="android:layout_toRightOf">@id/icon_phone</item>
        <item name="android:background">#ccffffff</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_toEndOf">@+id/icon_image</item>
        <item name="android:background">#0032EB</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:paddingLeft">55dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>
